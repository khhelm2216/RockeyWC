@model Product

<div>
    <div>
        <h4>
            @Model.Name
            <span>
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <form id="@Model.ProductID" >
        <span>
            @Model.Description
        </span>
    </form>
</div>
